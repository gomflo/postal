---
// En modo estático no hay servidor para redirigir por query.
// Esta página solo existe para enlaces antiguos /detalle?id=xxx.
import "../styles/global.css";
const base = import.meta.env.BASE_URL;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <title>Redirigiendo… | Postali</title>
    <script is:inline define:vars={{ base }}>
      const id = new URLSearchParams(window.location.search).get("id");
      if (id) {
        window.location.replace((base.endsWith("/") ? base : base + "/") + "detalle/" + id);
      } else {
        window.location.replace(base.endsWith("/") ? base : base + "/");
      }
    </script>
  </head>
  <body class="min-h-screen bg-background text-foreground flex items-center justify-center">
    <p class="text-muted-foreground">Redirigiendo…</p>
  </body>
</html>
