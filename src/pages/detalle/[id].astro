---
// Redirige enlaces antiguos /postal/detalle/{id} a la URL canónica /postal/asentamiento-codigopostal
import "../../styles/global.css";
import { supabase } from "../../lib/supabase";
import type { PostalCodeRow } from "../../lib/supabase";
import { slugForAsentamiento } from "../../lib/slug";

export async function getStaticPaths() {
  const BATCH = 1000;
  const allRows: PostalCodeRow[] = [];
  let from = 0;

  while (true) {
    const { data, error } = await supabase
      .from("postal_codes")
      .select("*")
      .range(from, from + BATCH - 1);

    if (error) throw error;
    if (!data?.length) break;

    allRows.push(...data);
    if (data.length < BATCH) break;
    from += BATCH;
  }

  return allRows.map((row) => ({
    params: { id: row.id },
    props: { canonicalSlug: slugForAsentamiento(row.asentamiento, row.codigo_postal) },
  }));
}

const { canonicalSlug } = Astro.props;
const base = import.meta.env.BASE_URL;
const canonicalUrl = `${base.endsWith("/") ? base : base + "/"}${canonicalSlug}`;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex" />
    <meta http-equiv="refresh" content={`0;url=${canonicalUrl}`} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <title>Redirigiendo… | Postali</title>
  </head>
  <body class="min-h-screen bg-background text-foreground flex items-center justify-center">
    <p class="text-muted-foreground">
      Redirigiendo… <a href={canonicalUrl} class="text-foreground underline">Ir al detalle</a>
    </p>
  </body>
</html>
